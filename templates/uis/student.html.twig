{% extends 'base.html.twig' %}

{% block body %}
<div class="text-center my-8">
    <h1 class="h-20 text-2xl font-serif border-dark font-bold bg-gray-200 pt-4">Suivi des notes</h1>
    <div>
        <div class="grid grid-cols-3 ml-40">
            {% for matiere in matieres %}
                <div></div>
                <div class="h-10 w-1/3 bg-gray-200 rounded pt-2 my-5 matiere" data-matiere="{{matiere.libelle}}">
                    {{matiere.libelle}}
                    {% if notes | length > 0 %}
                        {% for note in notes %}
                            {% if note.matiere.libelle == matiere.libelle%}
                                <div class="noteDetails bg-red-200" id="{{matiere.libelle}}">
                                    <p><span class="italic font-bold">Contrôle: </span>{{note.type}}</p>
                                    <p><span class="italic font-bold">Note: </span> {{note.note}}</p>
                                    <p><span class="italic font-bold">Appréciaitons: </span> {{note.appreciation}}</p>
                                </div>
                            {% endif %}
                            
                        {% endfor %}
                    {% endif %}
                </div>

                <div></div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}