{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex justify-center mt-5 w-screen mt-3">
        
        <div class="w-1/3 shadow-md p-5">
            <div>
                {% for label, messages in app.flashes %}
                    <div class="bg-{{ label }}-100 border-t-4 border-teal-500 rounded-b text-teal-900 px-4 py-3 shadow-md" role="alert">
                        {% for message in messages %}
                            <p>{{ message }}</p>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
            <h2 class="bg bg-blue-100 mb-5 leading-9 text-center font-bold rounded p-5">Arriv√©e Enseignant(e)</h2>
            {{form_start(form)}}
            {{form_row(form.nom)}}
            {{form_end(form)}}
            <p>
                <i class="fas fa-arrow-left"></i><span class="ml-2"><a href="{{path('admin_ui')}}" class="text-blue-500">Retour</a></span>
            </p>
        </div>
    </div>
{% endblock %}